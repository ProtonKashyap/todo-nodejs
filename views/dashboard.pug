extends ./header.pug
block styles
    link(rel='stylesheet', href=
"https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css")
block scripts
    script(src='/scripts/script.js')
block  content
    nav.navbar.navbar-inverse
      .container-fluid
        .navbar-header
          a.navbar-brand(href='/')
            | TodosManager
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li.active
            a(href='/dashboard') My Todos
        ul.nav.navbar-nav.navbar-right
          li
            a(href='/logout')
              span.glyphicon.glyphicon-log-out LogOut
    h1 Welcome #{name} to Dashboard
    button(type='button' id='addtodo' class='btn btn-primary' ) AddTodo
    ol
        each todo in todos
            .todos.container-fluid
                    li #{todo.title}
                    a(href=`/todos/deleteTodo/${todo._id}`)
                        span.glyphicon.glyphicon-trash DeleteTodo |
                    if todo.completed
                        a(href=`/todos/updateTodo/${todo._id}`) Mark as Incomplete
                        input(type="checkbox" checked)
                    else
                        a(href=`/todos/updateTodo/${todo._id}`) Mark as Complete
                        input(type="checkbox")
        else
         p No todos to display , please add a todo