extends ./header.pug
block styles
  link(rel='stylesheet' ,href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css')
block content
  main(class='w-50 m-auto')
      form(action='/todos/addtodo' method='POST')
        h1(class='h3 mb-3 fw-normal') Title
        .form-floating
          input(type='text' class='form-control' id="title" name='title' required placeholder='Todo Title' )
          label(for='username') Title
        button(class='w-100 btn btn-lg btn-primary' type='submit') Add Todo