extends ./header.pug

block styles
  link(rel='stylesheet' ,href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css')

block content
    main(class='form-signin w-50 m-auto')
      form(action='/auth/register' method='POST')
        h1(class='h3 mb-3 fw-normal') Please register
        .form-floating
          input(type='text' class='form-control' id="username" name='name' required placeholder='Username' )
          label(for='username') Username
        .form-floating
          input(type='password' class='form-control' id="password" name='password' placeholder='password' required )
          label(for='password') Password
        button(class='w-100 btn btn-lg btn-primary' type='submit') Register
        p(class='mt-5 mb-3 text-body-secondary') &copy; 2017-2023